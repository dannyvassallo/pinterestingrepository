  <%=render "pages/home" unless user_signed_in?%>


  <div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
  <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body" data-pin="<%= pin.id %>">
        <p><%= pin.description %><br/></p>
        <p><strong><%= pin.user.name if pin.user %></strong></p>
            <p class="vote-text" data-vote="<%= pin.votes.count %>" > <span class="votenum"><%= pin.votes.count %></span> Votes</p>
            <% if user_signed_in? %>
            <span class="vote-block">
            <%= link_to raw("<i class=\"fa fa-thumbs-o-up\"></i> Vote"), upvote_pin_path(pin), method: :post, :remote => true, :class => "vote-btn" %>
            <%= link_to raw("<i class=\"fa fa-facebook-square\"></i> Share"), "#" , :class => "fb-share" %>
            </span>
            <% end %>
        <% if pin.user == current_user %>
            <div class="actions">
              <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
            <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Delete
            <% end %>
          </div>
          <% end %>

          </div>
        </div>
    <% end %>
</div>

<div class="center">
   <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

