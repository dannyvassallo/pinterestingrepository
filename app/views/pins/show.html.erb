<%= link_to 'Back', pins_path %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @pin.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <p><%= @pin.description %></p>
        <p><strong><%= @pin.user.name if @pin.user %></strong></p>

        <% if @pin.user == current_user %>
              <%= link_to edit_pin_path(@pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
          <% end %>
          <%= pluralize(@pin.votes.count, "vote") %>
          <% if user_signed_in? %>
            <%= button_to '+1', upvote_pin_path(@pin), method: :post %>
            <!-- ADD THIS ", :remote => true" without quotes above after method: :post to stop livereload -->
             <h2>Comments</h2>
 <div id="comments">
    <%= render :partial => @pin.comments %>
 </div>

 <%= form_for [@pin, Comment.new] do |f| %>
  <p>
      <%= f.label :body, "New comment" %></br>
      <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Add Comment" %><p>
 <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
